<p id="notice"><%= notice %></p>

<h1>Listing Sequences</h1>

<table>
  <thead>
    <tr>
      <th>Input sequence</th>
      <th>Length</th>
      <th>Ambiguous bases</th>
      <th>Defined bases</th>
      <th>Seen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sequences.each do |sequence| %>
      <tr>
        <td><%= sequence.input_sequence %></td>
        <td><%= sequence.length %></td>
        <td><%= sequence.ambiguous_bases %></td>
        <td><%= sequence.defined_bases %></td>
        <td><%= sequence.seen %></td>
        <td><%= link_to 'Show', sequence %></td>
        <td><%= link_to 'Edit', edit_sequence_path(sequence) %></td>
        <td><%= link_to 'Destroy', sequence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

